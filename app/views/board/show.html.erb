<h1><%= @post.title %></h1>

<p><%= @post.content %></p>
<p>Category: <%= @post.category %></p>

<h2>Comments</h2>

<% @post.comments.each do |comment| %>
  <p><%= comment.content %></p>
<% end %>

<h2>Add a comment:</h2>

<%= form_with(model: [ @post, @post.comments.build ], local: true) do |form| %>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div class="actions">
    <%= form.submit "Add Comment" %>
  </div>
<% end %>

<%= link_to 'Back', board_index_path %> |
<%= link_to 'Delete', board_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
